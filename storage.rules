
rules_version = '2';

// service firebase.storage defines the security rules for Cloud Storage.
service firebase.storage {
  // The {bucket} wildcard matches your project's default storage bucket.
  match /b/{bucket}/o {

    // This rule allows any user (authenticated or not) to read any file.
    match /{allPaths=**} {
      allow read: if true;
    }

    // TEMPORARY DEBUGGING RULE: Allow any signed-in user to write to the images folder.
    // This removes the dependency on Firestore to isolate the issue.
    match /images/{allPaths=**} {
       allow write: if request.auth != null;
    }
  }
}
