rules_version = '2';

// V9 - TEMPORARY DEBUGGING RULES
// These rules are temporarily simplified to diagnose the upload issue.
// They allow ANY authenticated user to upload, update, or delete files.
// This is NOT secure for production and will be reverted once the issue is solved.
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Public read is still needed for website images
      allow read: if true;
      // Allow write if the user is signed in. This removes the admin check for now.
      allow write: if request.auth != null;
    }
  }
}
