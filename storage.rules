rules_version = '2';

// v5 - Restoring correct rules alongside improved client-side upload logic.
// service firebase.storage defines the security rules for Cloud Storage.
service firebase.storage {
  // The {bucket} wildcard matches your project's default storage bucket.
  match /b/{bucket}/o {

    // This rule allows any user (authenticated or not) to read any file.
    // This is necessary for images to be displayed on your public website.
    match /{allPaths=**} {
      allow read: if true;
    }

    // This rule ONLY applies to files inside the 'images/' folder.
    // It grants write access (upload, update, delete) ONLY to administrators.
    // An admin is defined as a user whose UID exists as a document in the /roles_admin collection.
    match /images/{allPaths=**} {
       allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}
